<resources xmlns:android="http://schemas.android.com/apk/res/android">
   <!--
       Base application theme, dependent on API level. This theme is replaced
       by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
   -->
   <style name="AppBaseTheme" parent="Theme.AppCompat">
   </style>

   <style name="AppBaseTheme.NoActionBar">
      <item name="windowActionBar">false</item>
      <item name="windowNoTitle">true</item>
   </style>

   <style name="CalcButton">
      <item name="android:layout_width">0dp</item>
      <item name="android:layout_height">match_parent</item>
      <item name="android:layout_weight">1</item>
      <item name="android:layout_margin">@dimen/CalcButtonMargin</item>
      <item name="android:textSize">30sp</item>
   </style>

   <style name="CalcButton.Numb">
      <item name="android:background">@drawable/num_button</item>
      <item name="android:textColor">@drawable/button_text_color</item>
   </style>

   <style name="CalcButton.Operator">
      <item name="android:background">@drawable/op_button</item>
      <item name="android:textColor">@drawable/button_text_color</item>
   </style>

   <style name="CalcButton.Equals">
      <item name="android:background">@drawable/eq_button</item>
      <item name="android:textColor">@drawable/eq_button_text_color</item>
   </style>

   <style name="CalcButton.Clear">
      <item name="android:background">@drawable/clear_button</item>
      <item name="android:textColor">@drawable/button_text_color</item>
   </style>

   <style name="CalcButton.Convert">
      <item name="android:background">@drawable/conv_button</item>
      <item name="android:textColor">@drawable/button_text_color</item>
      <item name="android:textSize">20sp</item>
      <item name="android:padding">4dp</item>
      <item name="secondary_text_font_size_percentage">150</item>
   </style>

   <style name="SmallOperator">
      <item name="android:layout_width">0dp</item>
      <item name="android:layout_height">match_parent</item>
      <item name="android:layout_weight">1</item>
      <item name="android:textSize">30sp</item>
      <item name="android:background">@drawable/num_button</item>
      <item name="android:textColor">@drawable/button_text_color</item>
   </style>

   <style name="ResultText">
      <item name="android:layout_weight">1</item>
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">match_parent</item>
      <item name="android:background">@drawable/result_textview</item>
      <item name="android:textColor">@drawable/result_textview_text_color</item>
      <item name="android:textSize">18sp</item>
   </style>

   <style name="ResultPreview">
      <item name="android:background">@drawable/result_textview</item>
      <item name="android:textColor">@drawable/preview_textview_text_color
      </item>
      <item name="android:textSize">30sp</item>
   </style>
</resources>